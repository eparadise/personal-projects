#include<stdlib.h>
#include<stdio.h>
#include<math.h>

int main (int argc, char* argv[]) {
	int mem = (int) atoi(argv[0]);
	int size = mem * pow(2,20);
	int* memarray = (int *) malloc(size);
	int numentries = size/sizeof(int);
	while (1) {
		for (int i = 0; i < numentries; i++) {
			memarray[i] = i;
		}
		

	}
	free(memarray);
	return EXIT_SUCCESS;
}
